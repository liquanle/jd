/* pages/index/main.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image_main
{
  width:100%;
  height:350rpx;
  
}

.text_main
{
  margin: 0rpx 0rpx 0rpx 0rpx;
  padding: 0rpx;
  color:#743A3A;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 10px;
  margin-bottom: 10px;
}

.blank {
  width:100%;
  height:30%;
  margin-top: 0;
}

.input_main {
  border-style:solid;
  border-color:rgb(236, 232, 222);
  border-width:thin;
  height:75rpx;
  margin: 5rpx;
  padding: 0rpx 15rpx;
}

.button_main
{
  margin: 5rpx 15rpx;
  background-color:#613030;
  color:white;
}

.button_main_hover
{
  margin: 5rpx 15rpx;
  background-color:#461e1e;
  color:white;
}